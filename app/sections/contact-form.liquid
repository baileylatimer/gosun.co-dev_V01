          "label": "Right"
        }
      ]
    },
    {
      "type": "select",
      "id": "contact_text_alignment",
      "label": "Text alignment",
      "default": "left",
      "options": [
        {
          "value": "left",
          "label": "Left"
        },
        {
          "value": "center",
          "label": "Center"
        },
        {
          "value": "right",
          "label": "Right"
        }        
      ]
    }
  ],
  "presets": [
    {
      "name": "Contact form",
      "category": "Social"
    }
  ]
}

{% endschema %}
