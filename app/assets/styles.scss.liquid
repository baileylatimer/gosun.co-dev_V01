form.search_form, .search_form input {
  padding-top: 0;
  margin-bottom: 0;
  position: relative;
  -webkit-appearance: none;
  border-radius: 0;
  -webkit-font-smoothing: antialiased;
  -moz-osx-font-smoothing: grayscale;
  font-smoothing: antialiased;
}

.search_form input, .search_form input:active, .search_form input:focus {
  font-family: {{ settings.nav_font | replace: 'Google_', '' | replace: '+', ' ' }};
  font-weight: {{ settings.nav_weight }};
  font-size: 12px;
  letter-spacing: {{ settings.nav_letter_spacing }}px;
  color: {{ settings.nav_color }};
  background-color: transparent;
  padding-right: 35px;
  border-color: {{ settings.nav_color }};
  {% if settings.button_style == 'rounded' %}
    border-radius: 3px;
  {% elsif settings.button_style == 'pill_shaped' %}
    border-radius: 100px;
    padding-left: 15px;
